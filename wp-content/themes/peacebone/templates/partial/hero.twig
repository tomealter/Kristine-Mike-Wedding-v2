<div class="hero">
  <div class="hero__image" style="background-image: url({{ image }})"></div>
  <div class="hero__content">
    <h1 class="hero__title">{{ title }}</h1>
    <div class="hero__subtitle">{{ subtitle }}</div>
    <div class="hero__date">{{ date }}</div>
    <a class="button button--white" href="{{ button_url }}">{{ button_text }}</a>
  </div>
</div>