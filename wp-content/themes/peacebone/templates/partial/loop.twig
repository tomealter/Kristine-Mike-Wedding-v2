{% set counter_title = 1 %}
{% set counter_body = 1 %}

<div class="loop">
  <div class="loop__top">
    {% for item in items %}
      <a href="#" class="loop__link{% if counter_title == 1 %} is-active{% endif %}" id="{{ counter_title }}">{{ item.title }}</a>
      {% set counter_title = counter_title + 1 %}
    {% endfor %}
  </div>
  <div class="loop__bottom">
    {% for item in items %}
      <div class="loop__text{% if counter_body == 1 %} is-active{% endif %}" id="{{ counter_body }}">
        <div class="loop__body">{{ item.body }}</div>
        {% if item.button is not empty %}
          <a href="{{ item.button.url }}" class="button button--white">{{ item.button.title }}</a>
        {% endif %} 
      </div>
      {% set counter_body = counter_body + 1 %}
    {% endfor %}
  </div>
</div>